<%-include('include/head.ejs')%>

<main class="w-full h-screen flex items-center justify-center bg-gray-100">
    <form class="w-2/5 rounded shadow-xl p-4 flex flex-col"  action="/edit" method="POST">
        <label for="fullname" class="font-bold m-2">
            Fullname
        </label>
        <input type="text" placeholder="Fullname" id="fullname" name="fullname" class="py-2 px-4 rounded-md" value="<%= user.fullname%>">
        <label for="Email" class="font-bold m-2">
            Email
        </label>
        <input type="text" placeholder="Email" id="Email" name="email" class="py-2 px-4 rounded-md" value="<%= user.email%>">
        <label for="number" class="font-bold m-2">
            Number
        </label>
        <input type="number" placeholder="Number" id="number" name="number" class="py-2 px-4 rounded-md" value="<%= user.number%>">
        <label for="password" class="font-bold m-2">
            Password
        </label>
        <input type="password" placeholder="Password" id="password" name="password" class="py-2 px-4 rounded-md" value="<%= user.password%>">
        <label for="avatar" class="font-bold m-2">
            avatar
        </label>
        <input type="text" placeholder="avatar" id="avatar" name="avatar" class="py-2 px-4 rounded-md" value="<%= user.avatar%>">

        <input type="hidden" value="<%=user.id%>" name="userId">

        <input type="submit" value="Засах"  class="mt-4 py-2 px-4 rounded-md border border-gray-200">
    </form>


</main>




<%-include('include/foot.ejs')%>